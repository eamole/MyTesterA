<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/layout_activity_main" >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Code"
        android:id="@+id/txtCode"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Question"
        android:id="@+id/txtQuestion"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grpOptipns"
        android:onClick="onOptionsClick" >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option A"
            android:id="@+id/rbOption1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onOptionClick"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option B"
            android:id="@+id/rbOption2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onOptionClick"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option C"
            android:id="@+id/rbOption3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onOptionClick"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option D"
            android:id="@+id/rbOption4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onOptionClick"
            />

    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Selected Answer"
        android:id="@+id/txtAnswer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Correct Answer"
        android:id="@+id/txtSolution" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Explanation"
        android:id="@+id/txtExplanation" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next >>"
            android:id="@+id/btnNext"
            android:onClick="onNextClick"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;&lt; Prev "
            android:id="@+id/btnPrev"
            android:onClick="onPrevClick"
            />


    </LinearLayout>

</LinearLayout>
